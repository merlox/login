body
  font-family: sans-serif
  margin: 0

button
  background-color: black
  border: none
  padding: 20px
  color: white
  cursor: pointer
  min-width: 200px

  &:hover:enabled
    opacity: 0.7

  &:active:enabled
    opacity: 0.9

  &:disabled
    opacity: 0.4
    cursor: not-allowed

input:not([type='submit']), textarea
  padding: 20px
  border-radius: 10px
  font-size: 15pt
  border: 1px solid lightgrey
  box-sizing: border-box

.hidden
  display: none

.boxy-link
  color: white
  text-decoration: none
  padding: 20px 0
  width: 100%
  text-align: center
  background-color: #444444

  &:hover
    background-color: #2e2e2e

  &:active
    color: whitesmoke
    background-color: #000000

.page
  width: 350px
  position: fixed
  box-shadow: 0 0 30px 0 lightgrey
  padding: 50px
  border-radius: 10px
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  text-align: center
  word-break: break-all

  .link-container
    display: flex
    flex-direction: column

    a:not(:last-child)
      margin-bottom: 10px

  h1
    margin-top: 0

.error-message
  color: tomato
  font-size: 14pt
  text-align: center

.success
  color: green
  font-size: 14pt
  text-align: center

.register-page
  form
    display: flex
    justify-content: center
    flex-direction: column
    align-items: center

    input
      width: 100%

    .submit-button
      cursor: pointer
      background-color: #444444
      color: white

      &:hover
        background-color: #2e2e2e

      &:active
        color: whitesmoke
        background-color: #000000

    *:not(:last-child)
      margin-bottom: 10px

.grey-link
  color: black
  opacity: 0.5
  text-decoration: none

  &:hover
    opacity: 0.6

  &:active
    opacity: 0.8

.spinner
  height: 50px
